@model CinemaManagement.ViewModels.QuanLyKhachHangViewModel
@{
    ViewData["Title"] = "Quản lý khách hàng";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-users"></i> Quản lý khách hàng
                    </h3>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm khách hàng
                    </a>
                </div>

                <div class="card-body">
                    <!-- Bộ lọc và tìm kiếm -->
                    <form method="get" class="mb-4">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-search"></i>
                                    </span>
                                    <input type="text" name="searchTerm" value="@Model.SearchTerm" 
                                           class="form-control" placeholder="Tìm kiếm theo tên, SĐT, mã KH...">
                                </div>
                            </div>
                            <div class="col-md-3">
                                <select name="sortBy" class="form-select">
                                    <option value="hoTen" selected="@(Model.SortBy == "hoTen")">Sắp xếp theo tên</option>
                                    <option value="maKhachHang" selected="@(Model.SortBy == "maKhachHang")">Sắp xếp theo mã KH</option>
                                    <option value="diemTichLuy" selected="@(Model.SortBy == "diemTichLuy")">Sắp xếp theo điểm tích lũy</option>
                                    <option value="sdt" selected="@(Model.SortBy == "sdt")">Sắp xếp theo SĐT</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select name="pageSize" class="form-select">
                                    <option value="10" selected="@(Model.PageSize == 10)">10/trang</option>
                                    <option value="25" selected="@(Model.PageSize == 25)">25/trang</option>
                                    <option value="50" selected="@(Model.PageSize == 50)">50/trang</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-outline-primary me-2">
                                    <i class="fas fa-filter"></i> Lọc
                                </button>
                                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                    <i class="fas fa-times"></i> Xóa bộ lọc
                                </a>
                            </div>
                        </div>
                    </form>

                    <!-- Thông báo -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Thống kê -->
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <div class="info-box">
                                <span class="info-box-icon bg-info">
                                    <i class="fas fa-users"></i>
                                </span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Tổng số khách hàng</span>
                                    <span class="info-box-number">@Model.TotalItems</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Bảng dữ liệu -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Mã KH</th>
                                    <th>Họ tên</th>
                                    <th>Số điện thoại</th>
                                    <th>Điểm tích lũy</th>
                                    <th>Hạng thành viên</th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.KhachHangs.Any())
                                {
                                    @foreach (var khachHang in Model.KhachHangs)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">@khachHang.MaKhachHang</span>
                                            </td>
                                            <td>
                                                <strong>@khachHang.HoTen</strong>
                                            </td>
                                            <td>
                                                <i class="fas fa-phone text-muted"></i> @khachHang.SDT
                                            </td>
                                            <td>
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-star"></i> @khachHang.DiemTichLuy điểm
                                                </span>
                                            </td>
                                            <td>
                                                @{
                                                    var hangThanhVien = khachHang.DiemTichLuy >= 1000 ? "VIP" : 
                                                                       khachHang.DiemTichLuy >= 500 ? "Vàng" : 
                                                                       khachHang.DiemTichLuy >= 100 ? "Bạc" : "Đồng";
                                                    var badgeClass = khachHang.DiemTichLuy >= 1000 ? "bg-danger" : 
                                                                   khachHang.DiemTichLuy >= 500 ? "bg-warning" : 
                                                                   khachHang.DiemTichLuy >= 100 ? "bg-info" : "bg-secondary";
                                                }
                                                <span class="badge @badgeClass">@hangThanhVien</span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", new { id = khachHang.MaKhachHang })" 
                                                       class="btn btn-sm btn-outline-info" title="Chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = khachHang.MaKhachHang })" 
                                                       class="btn btn-sm btn-outline-warning" title="Sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                                            onclick="deleteKhachHang('@khachHang.MaKhachHang', '@khachHang.HoTen')" 
                                                            title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4">
                                            <div class="text-muted">
                                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                                <p>Không tìm thấy khách hàng nào</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Phân trang -->
                    @if (Model.TotalPages > 1)
                    {
                        <nav aria-label="Phân trang">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { 
                                        searchTerm = Model.SearchTerm, 
                                        sortBy = Model.SortBy, 
                                        pageSize = Model.PageSize, 
                                        page = Model.CurrentPage - 1 })">
                                        <i class="fas fa-chevron-left"></i> Trước
                                    </a>
                                </li>

                                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { 
                                            searchTerm = Model.SearchTerm, 
                                            sortBy = Model.SortBy, 
                                            pageSize = Model.PageSize, 
                                            page = i })">@i</a>
                                    </li>
                                }

                                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { 
                                        searchTerm = Model.SearchTerm, 
                                        sortBy = Model.SortBy, 
                                        pageSize = Model.PageSize, 
                                        page = Model.CurrentPage + 1 })">
                                        Sau <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>

                        <div class="text-center text-muted">
                            Hiển thị @((Model.CurrentPage - 1) * Model.PageSize + 1) - @(Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalItems)) 
                            trong tổng số @Model.TotalItems khách hàng
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function deleteKhachHang(maKhachHang, hoTen) {
    if (confirm(`Bạn có chắc chắn muốn xóa khách hàng "${hoTen}"?`)) {
        $.ajax({
            url: '@Url.Action("Delete")',
            type: 'POST',
            data: { id: maKhachHang },
            success: function(response) {
                if (response.success) {
                    alert(response.message);
                    location.reload();
                } else {
                    alert(response.message);
                }
            },
            error: function() {
                alert('Có lỗi xảy ra khi xóa khách hàng!');
            }
        });
    }
}
</script>
