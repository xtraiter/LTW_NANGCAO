@model CinemaManagement.Models.HoaDon
@{
    ViewData["Title"] = "Xóa hóa đơn";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Xóa hóa đơn</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h4 class="alert-heading">
                            <i class="fas fa-exclamation-triangle"></i> Cảnh báo!
                        </h4>
                        <p>Bạn có chắc chắn muốn xóa hóa đơn này không?</p>
                        <hr>
                        <p class="mb-0">Thao tác này không thể hoàn tác. Tất cả dữ liệu liên quan đến hóa đơn sẽ bị xóa vĩnh viễn.</p>
                    </div>

                    <!-- Thông tin hóa đơn sẽ bị xóa -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Thông tin hóa đơn</h5>
                                </div>
                                <div class="card-body">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td><strong>Mã hóa đơn:</strong></td>
                                            <td>@Model.MaHoaDon</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Thời gian tạo:</strong></td>
                                            <td>@Model.ThoiGianTao.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Số lượng vé:</strong></td>
                                            <td>@Model.SoLuong</td>
                                        </tr>
                                        <tr>
                                            <td><strong>Tổng tiền:</strong></td>
                                            <td class="text-danger fw-bold">@Model.TongTien.ToString("N0") VNĐ</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Thông tin khách hàng & nhân viên</h5>
                                </div>
                                <div class="card-body">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td><strong>Khách hàng:</strong></td>
                                            <td>
                                                @if (Model.KhachHang != null)
                                                {
                                                    <span>@Model.KhachHang.HoTen</span><br>
                                                    <small class="text-muted">@Model.KhachHang.SDT</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Khách vãng lai</span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Nhân viên:</strong></td>
                                            <td>
                                                @Model.NhanVien?.TenNhanVien<br>
                                                <small class="text-muted">@Model.NhanVien?.SDT</small>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Nút xác nhận -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="d-flex justify-content-end">
                                <a asp-action="Index" class="btn btn-secondary me-2">
                                    <i class="fas fa-times"></i> Hủy bỏ
                                </a>
                                <form asp-action="Delete" method="post" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" asp-for="MaHoaDon" />
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa hóa đơn này?')">
                                        <i class="fas fa-trash"></i> Xóa hóa đơn
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
