@model CinemaManagement.Models.Phim
@{
    ViewData["Title"] = "Chi tiết phim - " + Model.TenPhim;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <!-- Thông tin phim -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-film me-2"></i>@Model.TenPhim
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="text-center">
                                @if (!string.IsNullOrEmpty(Model.ViTriFilePhim))
                                {
                                    <img src="@Model.ViTriFilePhim" alt="@Model.TenPhim" 
                                         class="img-fluid rounded shadow movie-poster">
                                }
                                else
                                {
                                    <div class="bg-light p-4 rounded movie-poster-placeholder">
                                        <i class="fas fa-film fa-2x text-muted"></i>
                                        <p class="mt-2 text-muted">Không có poster</p>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="col-md-9">
                            <h5>Thông tin phim</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Thể loại:</strong></td>
                                    <td>@Model.TheLoai</td>
                                </tr>
                                <tr>
                                    <td><strong>Thời lượng:</strong></td>
                                    <td>@Model.ThoiLuong phút</td>
                                </tr>
                                <tr>
                                    <td><strong>Độ tuổi:</strong></td>
                                    <td>@Model.DoTuoiPhanAnh</td>
                                </tr>
                            </table>
                            
                            <h6>Mô tả</h6>
                            <p class="text-justify">@Model.MoTa</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Đánh giá phim -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-star me-2"></i>Đánh giá phim
                    </h4>
                </div>
                <div class="card-body">
                    @if (ViewBag.TongSoDanhGia > 0)
                    {
                        <!-- Thống kê tổng quan -->
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <div class="text-center p-3 bg-light rounded">
                                    <h2 class="text-warning mb-2">@ViewBag.DiemTrungBinh/10</h2>
                                    <div class="rating-stars mb-2">
                                        @{
                                            var avgRating = (double)ViewBag.DiemTrungBinh;
                                            var fullStars = (int)Math.Floor(avgRating / 2);
                                            var hasHalfStar = (avgRating / 2) - fullStars >= 0.5;
                                            var emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
                                        }
                                        @for (int i = 0; i < fullStars; i++)
                                        {
                                            <i class="fas fa-star text-warning"></i>
                                        }
                                        @if (hasHalfStar)
                                        {
                                            <i class="fas fa-star-half-alt text-warning"></i>
                                        }
                                        @for (int i = 0; i < emptyStars; i++)
                                        {
                                            <i class="far fa-star text-warning"></i>
                                        }
                                    </div>
                                    <p class="text-muted mb-0">@ViewBag.TongSoDanhGia đánh giá</p>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="p-3">
                                    <h6 class="mb-3">Phân bố đánh giá:</h6>
                                    @{
                                        var danhGiaList = ViewBag.DanhGiaPhim as List<CinemaManagement.Models.DanhGiaPhim> ?? new List<CinemaManagement.Models.DanhGiaPhim>();
                                        var phanBoRating = new Dictionary<int, int>();
                                        for (int i = 1; i <= 10; i++)
                                        {
                                            phanBoRating[i] = danhGiaList.Count(dg => dg.DiemDanhGia == i);
                                        }
                                    }
                                    @for (int rating = 10; rating >= 1; rating--)
                                    {
                                        var count = phanBoRating[rating];
                                        var percentage = ViewBag.TongSoDanhGia > 0 ? (count * 100.0 / (int)ViewBag.TongSoDanhGia) : 0;
                                        <div class="d-flex align-items-center mb-1">
                                            <span class="me-2" style="width: 20px;">@rating</span>
                                            <i class="fas fa-star text-warning me-2"></i>
                                            <div class="progress flex-grow-1 me-2" style="height: 20px;">
                                                <div class="progress-bar bg-warning" role="progressbar" 
                                                     style="width: @percentage%" 
                                                     aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100">
                                                </div>
                                            </div>
                                            <span class="text-muted" style="width: 40px;">@count</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Danh sách đánh giá chi tiết -->
                        <div class="row">
                            <div class="col-12">
                                <h6 class="mb-3">Đánh giá từ khách hàng:</h6>
                                <div class="reviews-container" style="max-height: 600px; overflow-y: auto;">
                                    @foreach (var danhGia in danhGiaList)
                                    {
                                        <div class="card mb-3 border-left-warning">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar-circle me-3">
                                                            @(danhGia.KhachHang.HoTen.Split(' ').LastOrDefault()?.Substring(0, 1).ToUpper())
                                                        </div>
                                                        <div>
                                                            <h6 class="mb-0">@danhGia.KhachHang.HoTen</h6>
                                                            <small class="text-muted">@danhGia.ThoiGianDanhGia.ToString("dd/MM/yyyy HH:mm")</small>
                                                        </div>
                                                    </div>
                                                    <div class="rating-display">
                                                        <span class="badge bg-warning text-dark me-2">@danhGia.DiemDanhGia/10</span>
                                                        <div class="d-inline-block">
                                                            @{
                                                                var customerStars = (int)Math.Floor(danhGia.DiemDanhGia / 2.0);
                                                                var hasCustomerHalfStar = (danhGia.DiemDanhGia % 2) == 1;
                                                                var customerEmptyStars = 5 - customerStars - (hasCustomerHalfStar ? 1 : 0);
                                                            }
                                                            @for (int i = 0; i < customerStars; i++)
                                                            {
                                                                <i class="fas fa-star text-warning" style="font-size: 14px;"></i>
                                                            }
                                                            @if (hasCustomerHalfStar)
                                                            {
                                                                <i class="fas fa-star-half-alt text-warning" style="font-size: 14px;"></i>
                                                            }
                                                            @for (int i = 0; i < customerEmptyStars; i++)
                                                            {
                                                                <i class="far fa-star text-warning" style="font-size: 14px;"></i>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                                @if (!string.IsNullOrEmpty(danhGia.NoiDungDanhGia))
                                                {
                                                    <p class="mb-0 text-justify">@danhGia.NoiDungDanhGia</p>
                                                }
                                                else
                                                {
                                                    <p class="mb-0 text-muted font-italic">Khách hàng chưa để lại bình luận.</p>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-star fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Chưa có đánh giá nào</h5>
                            <p class="text-muted">Hãy là người đầu tiên đánh giá bộ phim này!</p>
                            <a href="@Url.Action("DanhGiaPhim", new { id = Model.MaPhim })" class="btn btn-warning">
                                <i class="fas fa-star me-1"></i>Đánh giá ngay
                            </a>
                        </div>
                    }

                    @if (ViewBag.TongSoDanhGia > 0)
                    {
                        <div class="text-center mt-4">
                            <a href="@Url.Action("DanhGiaPhim", new { id = Model.MaPhim })" class="btn btn-outline-warning">
                                <i class="fas fa-plus me-1"></i>Thêm đánh giá của bạn
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Lịch chiếu -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-calendar-alt me-2"></i>Lịch chiếu phim
                        </h4>
                        <div class="d-flex align-items-center">
                            <label class="text-white me-2 mb-0">Chọn ngày:</label>
                            <input type="date" id="dateFilterDetail" class="form-control form-control-sm" 
                                   style="width: auto; min-width: 150px;" 
                                   value="@DateTime.Today.ToString("yyyy-MM-dd")"
                                   min="@DateTime.Today.ToString("yyyy-MM-dd")"
                                   max="@DateTime.Today.AddDays(30).ToString("yyyy-MM-dd")">
                        </div>
                    </div>
                </div>
                <div class="card-body" id="scheduleDetailContainer">
                    <div id="scheduleDetailContent">
                        <!-- Nội dung sẽ được load bằng JavaScript -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Phim đề xuất/liên quan -->
    @{
        var phimLienQuan = ViewBag.PhimLienQuan as List<dynamic>;
        var validPhimLienQuan = new List<dynamic>();
        
        if (phimLienQuan != null)
        {
            // Lọc ra những phim không trùng với phim hiện tại (để đảm bảo)
            validPhimLienQuan = phimLienQuan.Where(p => 
                ((CinemaManagement.Models.Phim)p.Phim).MaPhim?.Trim() != Model.MaPhim?.Trim()
            ).ToList();
        }
    }
    
    @if (validPhimLienQuan.Any())
    {
        <!-- Chỉ hiển thị section nếu có ít nhất 1 phim hợp lệ để đề xuất -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-film me-2"></i>Phim đề xuất cho bạn
                        </h4>
                        <small class="opacity-75">Những bộ phim hay bạn có thể quan tâm</small>
                    </div>
                    <div class="card-body p-0">
                        <div id="recommendedMoviesCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="8000">
                            @{
                                var moviesPerSlide = 4; // 4 phim mỗi slide
                                var totalSlides = (int)Math.Ceiling(validPhimLienQuan.Count / (double)moviesPerSlide);
                            }

                            <!-- Indicators -->
                            <div class="carousel-indicators">
                                @for (int i = 0; i < totalSlides; i++)
                                {
                                    <button type="button" data-bs-target="#recommendedMoviesCarousel" data-bs-slide-to="@i" 
                                            class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" 
                                            aria-label="Slide @(i + 1)"></button>
                                }
                            </div>

                            <!-- Carousel Items -->
                            <div class="carousel-inner">
                                @for (int slideIndex = 0; slideIndex < totalSlides; slideIndex++)
                                {
                                    <div class="carousel-item @(slideIndex == 0 ? "active" : "")">
                                        <div class="container-fluid p-4">
                                            <div class="row justify-content-center">
                                                @for (int movieIndex = 0; movieIndex < moviesPerSlide; movieIndex++)
                                                {
                                                    var currentMovieIndex = slideIndex * moviesPerSlide + movieIndex;
                                                    if (currentMovieIndex < validPhimLienQuan.Count)
                                                    {
                                                        var movieData = validPhimLienQuan[currentMovieIndex];
                                                        var phim = (CinemaManagement.Models.Phim)movieData.Phim;
                                                        var avgRating = (decimal)movieData.AvgRating;
                                                        var ratingCount = (int)movieData.RatingCount;
                                                        var avgPrice = (decimal)movieData.AvgPrice;
                                                        var hasSchedule = (bool)movieData.HasSchedule;
                                                        var recommendReason = (string)movieData.RecommendReason;

                                                        <div class="col-md-6 col-lg-3 mb-4">
                                                            <div class="phim-carousel-card card h-100 shadow-sm">
                                                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center position-relative" 
                                                                     style="height: 250px;">
                                                                    @if (!string.IsNullOrEmpty(phim.ViTriFilePhim))
                                                                    {
                                                                        <img src="@phim.ViTriFilePhim" alt="@phim.TenPhim" 
                                                                             class="img-fluid" style="max-height: 100%; max-width: 100%; object-fit: cover;">
                                                                    }
                                                                    else
                                                                    {
                                                                        <div class="text-center text-muted">
                                                                            <i class="fas fa-film fa-2x"></i>
                                                                            <p class="mt-2 small">Không có poster</p>
                                                                        </div>
                                                                    }
                                                                </div>
                                                                
                                                                <div class="card-body p-3">
                                                                    <h6 class="card-title text-primary">@phim.TenPhim</h6>
                                                                    <div class="card-text">
                                                                        <div class="info-line">
                                                                            <i class="fas fa-tag me-2 text-success"></i>
                                                                            <span class="small">@phim.TheLoai</span>
                                                                        </div>
                                                                        <div class="info-line">
                                                                            <i class="fas fa-clock me-2 text-warning"></i>
                                                                            <span class="small">@phim.ThoiLuong phút</span>
                                                                        </div>
                                                                        <div class="info-line">
                                                                            <i class="fas fa-users me-2 text-info"></i>
                                                                            <span class="small">@phim.DoTuoiPhanAnh</span>
                                                                        </div>
                                                                        <div class="info-line rating-line" data-phim="@phim.MaPhim">
                                                                            <div class="movie-rating">
                                                                                <div class="stars-small">
                                                                                    @if (ratingCount > 0)
                                                                                    {
                                                                                        var fullStars = (int)Math.Floor(avgRating / 2);
                                                                                        var hasHalfStar = (avgRating / 2) - fullStars >= 0.5m;
                                                                                        var emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
                                                                                        
                                                                                        for (int i = 0; i < fullStars; i++)
                                                                                        {
                                                                                            <i class="fas fa-star text-warning"></i>
                                                                                        }
                                                                                        if (hasHalfStar)
                                                                                        {
                                                                                            <i class="fas fa-star-half-alt text-warning"></i>
                                                                                        }
                                                                                        for (int i = 0; i < emptyStars; i++)
                                                                                        {
                                                                                            <i class="far fa-star text-warning"></i>
                                                                                        }
                                                                                    }
                                                                                </div>
                                                                                <span class="rating-text small text-muted ms-1">
                                                                                    @if (ratingCount > 0)
                                                                                    {
                                                                                        @($"{avgRating:0.0}/10 ({ratingCount})")
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        @("Chưa có đánh giá")
                                                                                    }
                                                                                </span>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <p class="card-text small text-muted mt-2">
                                                                        @(phim.MoTa.Length > 80 ? phim.MoTa.Substring(0, 80) + "..." : phim.MoTa)
                                                                    </p>
                                                                </div>
                                                                
                                                                <div class="card-footer p-2">
                                                                    <div class="d-flex gap-1">
                                                                        <a href="@Url.Action("ChiTietPhim", new { id = phim.MaPhim })" 
                                                                           class="btn btn-primary btn-sm w-100">
                                                                            <i class="fas fa-info-circle me-1"></i>Chi tiết
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                            <!-- Controls -->
                            <button class="carousel-control-prev" type="button" data-bs-target="#recommendedMoviesCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#recommendedMoviesCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    }

    <!-- Nút quay lại -->
    <div class="row mt-3">
        <div class="col-12">
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách phim
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Tooltip cho các nút
            $('[data-bs-toggle="tooltip"]').tooltip();
            
            // Get schedule data from server
            var allSchedules = @Html.Raw(Json.Serialize(ViewBag.LichChieus ?? new List<object>()));
            
            // Date filter functionality
            $('#dateFilterDetail').on('change', function() {
                var selectedDate = $(this).val();
                if (selectedDate) {
                    loadScheduleForDateDetail(selectedDate);
                }
            });

            // Load schedule for today on page load
            loadScheduleForDateDetail($('#dateFilterDetail').val());

            // Initialize recommended movies carousel
            initializeRecommendedMoviesCarousel();
        });

        function loadScheduleForDateDetail(selectedDate) {
            // Show loading state
            $('#scheduleDetailContent').html(`
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Đang tải...</span>
                    </div>
                    <p class="mt-3 text-muted">Đang tải lịch chiếu...</p>
                </div>
            `);

            // Get schedule data from server
            var allSchedules = @Html.Raw(Json.Serialize(ViewBag.LichChieus ?? new List<object>()));
            
            // Filter schedules for selected date
            var selectedDateObj = new Date(selectedDate);
            var filteredSchedules = allSchedules.filter(function(schedule) {
                var scheduleDate = new Date(schedule.thoiGianBatDau);
                return scheduleDate.toDateString() === selectedDateObj.toDateString();
            });

            // Generate schedule HTML
            setTimeout(function() {
                if (filteredSchedules.length > 0) {
                    generateScheduleDetailHTML(filteredSchedules, selectedDate);
                } else {
                    $('#scheduleDetailContent').html(`
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Không có suất chiếu</h5>
                            <p class="text-muted">Không có lịch chiếu nào trong ngày được chọn.</p>
                        </div>
                    `);
                }
            }, 500);
        }

        function generateScheduleDetailHTML(schedules, selectedDate) {
            var selectedDateObj = new Date(selectedDate);
            var now = new Date();
            var dayNames = ['Chủ Nhật', 'Thứ Hai', 'Thứ Ba', 'Thứ Tư', 'Thứ Năm', 'Thứ Sáu', 'Thứ Bảy'];
            var dayName = dayNames[selectedDateObj.getDay()];
            var formattedDate = dayName + ', ' + selectedDateObj.getDate().toString().padStart(2, '0') + '/' + 
                               (selectedDateObj.getMonth() + 1).toString().padStart(2, '0') + '/' + selectedDateObj.getFullYear();

            var html = `
                <div class="mb-3 text-center">
                    <h6 class="text-primary mb-2">
                        <i class="fas fa-calendar-day me-2"></i>
                        Lịch chiếu ngày ${formattedDate}
                    </h6>
                    <span class="badge bg-primary">${schedules.length} suất chiếu</span>
                </div>
                <div class="row g-3">
            `;

            schedules.forEach(function(schedule, index) {
                var startTime = new Date(schedule.thoiGianBatDau);
                var endTime = new Date(schedule.thoiGianKetThuc);
                var isAvailable = startTime > now;
                var btnClass = isAvailable ? "btn-primary" : "btn-secondary";
                var btnText = isAvailable ? "Chọn ghế" : "Đã qua";
                var iconClass = isAvailable ? "fas fa-chair" : "fas fa-clock";

                var formatTime = function(date) {
                    return date.getHours().toString().padStart(2, '0') + ':' + 
                           date.getMinutes().toString().padStart(2, '0');
                };

                var formatCurrency = function(amount) {
                    return new Intl.NumberFormat('vi-VN').format(amount);
                };

                html += `
                    <div class="col-md-6 col-lg-4 col-xl-3">
                        <div class="schedule-item-card" style="animation-delay: ${index * 0.1}s">
                            <div class="schedule-header">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h6 class="room-name mb-0">
                                        <i class="fas fa-map-marker-alt me-1"></i>${schedule.phongChieu.tenPhong}
                                    </h6>
                                    <span class="price-badge">${formatCurrency(schedule.gia)} VNĐ</span>
                                </div>
                            </div>
                            <div class="schedule-body">
                                <div class="time-info">
                                    <div class="start-time">
                                        <i class="fas fa-clock me-1"></i>
                                        <span class="fw-bold">${formatTime(startTime)}</span>
                                    </div>
                                    <div class="date-info">
                                        ${selectedDateObj.getDate().toString().padStart(2, '0')}/${(selectedDateObj.getMonth() + 1).toString().padStart(2, '0')}/${selectedDateObj.getFullYear()}
                                    </div>
                                    <div class="end-time text-muted">
                                        Kết thúc: ${formatTime(endTime)}
                                    </div>
                                </div>
                                <div class="action-btn mt-3">
                `;

                if (isAvailable) {
                    html += `
                                    <a href="/KhachHang/ChonGhe?maLichChieu=${schedule.maLichChieu}" class="btn ${btnClass} btn-sm w-100">
                                        <i class="${iconClass} me-1"></i>${btnText}
                                    </a>
                    `;
                } else {
                    html += `
                                    <button class="btn ${btnClass} btn-sm w-100" disabled>
                                        <i class="${iconClass} me-1"></i>${btnText}
                                    </button>
                    `;
                }

                html += `
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            });

            html += `
                </div>
            `;

            $('#scheduleDetailContent').html(html);

            // Apply animations and hover effects
            $('.schedule-item-card').each(function(index) {
                $(this).css('animation-delay', (index * 0.1) + 's');
            });
            
            // Hover effects
            $('.schedule-item-card').hover(
                function() {
                    $(this).find('.btn:not(:disabled)').addClass('btn-hover-scale');
                },
                function() {
                    $(this).find('.btn').removeClass('btn-hover-scale');
                }
            );
        }

        // Initialize recommended movies carousel
        function initializeRecommendedMoviesCarousel() {
            if ($('#recommendedMoviesCarousel').length > 0) {
                var recommendedCarousel = new bootstrap.Carousel(document.getElementById('recommendedMoviesCarousel'), {
                    interval: 6000, // Auto slide every 6 seconds
                    wrap: true,
                    touch: true
                });

                // Pause carousel on hover
                $('#recommendedMoviesCarousel').hover(
                    function() {
