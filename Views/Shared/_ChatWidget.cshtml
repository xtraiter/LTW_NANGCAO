        }
        
        .message-content {
            max-width: 200px;
        }
        
        .chat-messages {
            max-height: 280px;
            -webkit-overflow-scrolling: touch;
        }
    }

    @@media (max-width: 480px) {
        .chat-widget {
            bottom: 10px;
            right: 10px;
        }
        
        .chat-container {
            width: calc(100vw - 40px);
            right: -10px;
            height: 400px;
        }
        
        .chat-messages {
            max-height: 230px;
            -webkit-overflow-scrolling: touch;
        }
    }
</style>

<script>
    $(document).ready(function() {
        let chatSessionId = null;
        let isTyping = false;

        // Toggle chat
        $('#chatToggle').click(function() {
            const container = $('#chatContainer');
            if (container.is(':visible')) {
                container.fadeOut(300);
            } else {
                container.fadeIn(300, function() {
                    $('#chatMessageInput').focus();
                    setTimeout(scrollToBottom, 200);
                });
            }
        });

        // Close chat
        $('#chatClose').click(function() {
            $('#chatContainer').fadeOut(300);
        });

        // Send message
        $('#chatSendBtn').click(sendMessage);
        
        $('#chatMessageInput').keypress(function(e) {
            if (e.which === 13 && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        });

        function sendMessage() {
            const input = $('#chatMessageInput');
            const message = input.val().trim();
            
            if (!message || isTyping) return;

            // Add user message to chat
            addMessage(message, 'user');
            input.val('');
            
            // Show typing indicator
            showTyping();
            
            // Send to server
            $.ajax({
                url: '/Chat/SendMessage',
                method: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    message: message,
                    sessionId: chatSessionId
                }),
                success: function(response) {
                    hideTyping();
                    
                    if (response.success) {
                        chatSessionId = response.sessionId;
                        addMessage(response.response, 'bot', response.timestamp);
                    } else {
                        addMessage(response.error || 'Có lỗi xảy ra, vui lòng thử lại.', 'bot');
                    }
                },
                error: function() {
                    hideTyping();
                    addMessage('Không thể kết nối đến server. Vui lòng thử lại sau.', 'bot');
                }
            });
        }

        function addMessage(content, type, timestamp = null) {
            const time = timestamp || new Date().toLocaleTimeString('vi-VN', { 
                hour: '2-digit', 
                minute: '2-digit' 
            });
            
            const avatar = type === 'user' ? 
                '<i class="fas fa-user"></i>' : 
                '<i class="fas fa-robot"></i>';
            
            const messageClass = type === 'user' ? 'user-message' : 'bot-message';
            
            const messageHtml = `
                <div class="message ${messageClass}">
                    <div class="message-avatar">${avatar}</div>
                    <div class="message-content">
                        <p class="mb-0">${formatMessage(content)}</p>
                    </div>
                    <div class="message-time">${time}</div>
                </div>
            `;
            
            $('#chatMessages').append(messageHtml);
            
            // Delay scroll để đảm bảo DOM đã được cập nhật
            setTimeout(function() {
                scrollToBottom();
            }, 100);
        }

        function formatMessage(content) {
            // Convert line breaks to <br>
            content = content.replace(/\n/g, '<br>');
            
            // Convert URLs to links
            const urlRegex = /(https?:\/\/[^\s]+)/g;
            content = content.replace(urlRegex, '<a href="$1" target="_blank">$1</a>');
            
            return content;
        }

        function showTyping() {
            isTyping = true;
            $('#chatTyping').show();
            setTimeout(function() {
                scrollToBottom();
            }, 100);
        }

        function hideTyping() {
            isTyping = false;
            $('#chatTyping').hide();
        }

        function scrollToBottom() {
            const messagesContainer = $('#chatMessages');
            if (messagesContainer.length > 0) {
                const container = messagesContainer[0];
                container.scrollTop = container.scrollHeight;
                
                // Force scroll with animation
                messagesContainer.animate({
                    scrollTop: container.scrollHeight
                }, 300);
            }
        }

        // Auto-scroll to bottom on page load
        setTimeout(scrollToBottom, 100);
    });
</script>
