@{
    var maKhachHang = Context.Session.GetString("MaKhachHang");
    var isLoggedIn = !string.IsNullOrEmpty(maKhachHang);
}

@if (isLoggedIn)
{
<!-- Support Widget -->
<div id="supportWidget" class="support-widget">
    <!-- Support Toggle Button -->
    <div id="supportToggle" class="support-toggle">
        <i class="fas fa-headset"></i>
        <span class="support-badge" id="supportBadge" style="display: none;">1</span>
    </div>

    <!-- Support Container -->
    <div id="supportContainer" class="support-container">
        <!-- Support Header -->
        <div class="support-header">
            <div class="d-flex align-items-center">
                <div class="support-avatar">
                    <i class="fas fa-headset"></i>
                </div>
                <div class="support-info">
                    <h6 class="mb-0">Hỗ trợ khách hàng</h6>
                    <small class="text-muted">Chúng tôi luôn sẵn sàng hỗ trợ bạn</small>
                </div>
            </div>
            <div class="d-flex gap-2">
                <button id="supportRefresh" class="btn btn-sm btn-outline-light" title="Làm mới">
                    <i class="fas fa-sync-alt"></i>
                </button>
                <button id="supportClose" class="btn btn-sm btn-outline-light">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>

        <!-- Support Messages -->
        <div id="supportMessages" class="support-messages">
            <div class="message staff-message">
                <div class="message-avatar">
                    <i class="fas fa-user-tie"></i>
                </div>
                <div class="message-content">
                    <p>Xin chào! Chúng tôi là đội ngũ hỗ trợ khách hàng của D'CINE. Chúng tôi có thể giúp bạn:</p>
                    <ul class="mb-0">
                        <li>Giải đáp thắc mắc về dịch vụ</li>
                        <li>Hướng dẫn sử dụng website</li>
                        <li>Xử lý khiếu nại, góp ý</li>
                        <li>Hỗ trợ kỹ thuật</li>
                        <li>Thông tin khuyến mãi đặc biệt</li>
                    </ul>
                    <p class="mt-2 mb-0">Bạn cần hỗ trợ gì ạ?</p>
                </div>
                <div class="message-time">Bây giờ</div>
            </div>
        </div>

        <!-- Support Input -->
        <div class="support-input">
            <div class="input-group">
                <input type="file" id="supportImageInput" accept="image/*" style="display: none;" />
                <button id="supportImageBtn" class="btn btn-outline-secondary" type="button" title="Đính kèm hình ảnh">
                    <i class="fas fa-image"></i>
                </button>
                <input type="text" id="supportMessageInput" class="form-control" 
                       placeholder="Nhập tin nhắn..." maxlength="1000">
                <button id="supportSendBtn" class="btn btn-primary" type="button">
                    <i class="fas fa-paper-plane"></i>
                </button>
            </div>
            <!-- Image Preview -->
            <div id="supportImagePreview" class="mt-2" style="display: none;">
                <div class="position-relative d-inline-block">
                    <img id="supportPreviewImg" src="" alt="Preview" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                    <button type="button" class="btn btn-danger btn-sm position-absolute top-0 end-0 rounded-circle" onclick="removeSupportImagePreview()" style="width: 20px; height: 20px; padding: 0; font-size: 10px;">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div id="supportTyping" class="typing-indicator" style="display: none;">
                <span></span>
                <span></span>
                <span></span>
                Đang gửi...
            </div>
        </div>
    </div>
</div>

<style>
    .support-widget {
        position: fixed;
        bottom: 20px;
        left: 20px;
        z-index: 1040;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .support-toggle {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #28a745, #1e7e34);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        cursor: pointer;
        box-shadow: 0 4px 20px rgba(40, 167, 69, 0.3);
        transition: all 0.3s ease;
        position: relative;
    }

    .support-toggle:hover {
        transform: scale(1.1);
        box-shadow: 0 6px 25px rgba(40, 167, 69, 0.4);
    }

    .support-toggle i {
        font-size: 24px;
    }

    .support-badge {
        position: absolute;
        top: -5px;
        right: -5px;
        background: #dc3545;
        color: white;
        border-radius: 50%;
        width: 20px;
        height: 20px;
        font-size: 12px;
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .support-container {
        position: absolute;
        bottom: 80px;
        left: 0;
        width: 380px;
        height: 520px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 50px rgba(0, 0, 0, 0.15);
        display: none;
        flex-direction: column;
        overflow: hidden;
        border: 1px solid #e9ecef;
    }

    .support-header {
        background: linear-gradient(135deg, #28a745, #1e7e34);
        color: white;
        padding: 15px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .support-avatar {
        width: 35px;
        height: 35px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 10px;
    }

    .support-avatar i {
        font-size: 16px;
    }

    .support-info h6 {
        font-size: 14px;
        font-weight: 600;
    }

    .support-info small {
        font-size: 11px;
        opacity: 0.8;
    }

    .support-messages {
        flex: 1;
        padding: 15px;
        overflow-y: auto;
        overflow-x: hidden;
        max-height: 370px;
        min-height: 200px;
        scrollbar-width: thin;
        scrollbar-color: #28a745 #f8f9fa;
        scroll-behavior: smooth;
    }

    .support-messages::-webkit-scrollbar {
        width: 6px;
    }

    .support-messages::-webkit-scrollbar-track {
        background: #f8f9fa;
    }

    .support-messages::-webkit-scrollbar-thumb {
        background: #28a745;
        border-radius: 3px;
    }

    .message {
        margin-bottom: 15px;
        display: flex;
        align-items: flex-start;
        animation: slideIn 0.3s ease;
    }

    .customer-message {
        flex-direction: row-reverse;
    }

    .message-avatar {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
        margin: 0 8px;
        flex-shrink: 0;
    }

    .staff-message .message-avatar {
        background: #28a745;
        color: white;
    }

    .customer-message .message-avatar {
        background: #007bff;
        color: white;
    }

    .message-content {
        max-width: 280px;
        padding: 10px 12px;
        border-radius: 15px;
        position: relative;
        font-size: 14px;
        line-height: 1.4;
    }

    .staff-message .message-content {
        background: #f8f9fa;
        color: #333;
        border-bottom-left-radius: 5px;
    }

    .customer-message .message-content {
        background: #007bff;
        color: white;
        border-bottom-right-radius: 5px;
    }

    .message-content ul {
        margin: 8px 0;
        padding-left: 16px;
    }

    .message-content li {
        margin-bottom: 3px;
        font-size: 13px;
    }

    .message-content img {
        max-width: 100%;
        border-radius: 8px;
        margin-top: 5px;
    }

    .message-time {
        font-size: 10px;
        color: #6c757d;
        margin-top: 5px;
        align-self: flex-end;
    }

    .customer-message .message-time {
        margin-right: 8px;
    }

    .staff-message .message-time {
        margin-left: 8px;
    }

    .support-input {
        padding: 15px;
        border-top: 1px solid #e9ecef;
        background: #f8f9fa;
    }

    .support-input .form-control {
        border: 1px solid #ddd;
        border-radius: 20px;
        padding: 10px 15px;
        font-size: 14px;
    }

    .support-input .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }

    .support-input .btn {
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .typing-indicator {
        display: flex;
        align-items: center;
        gap: 5px;
        margin-top: 8px;
        font-size: 12px;
        color: #6c757d;
    }

    .typing-indicator span {
        width: 6px;
        height: 6px;
        background: #28a745;
        border-radius: 50%;
        animation: typing 1.4s infinite ease-in-out;
    }

    .typing-indicator span:nth-child(1) { animation-delay: -0.32s; }
    .typing-indicator span:nth-child(2) { animation-delay: -0.16s; }

    @@keyframes typing {
        0%, 80%, 100% { transform: scale(0.8); opacity: 0.5; }
        40% { transform: scale(1); opacity: 1; }
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .support-container {
            width: 320px;
            height: 480px;
        }
        
        .message-content {
            max-width: 220px;
        }
        
        .support-messages {
            max-height: 300px;
            -webkit-overflow-scrolling: touch;
        }
    }

    @@media (max-width: 480px) {
        .support-widget {
            bottom: 10px;
            left: 10px;
        }
        
        .support-container {
            width: calc(100vw - 40px);
            left: -10px;
            height: 420px;
        }
        
        .support-messages {
            max-height: 250px;
            -webkit-overflow-scrolling: touch;
        }
    }
</style>

<script>
    $(document).ready(function() {
        let isTyping = false;
        let selectedImage = null;

        // Load existing messages on widget open
        function loadSupportMessages() {
            $.get('@Url.Action("GetMessages", "Support")', function(response) {
                                 if (response.success && response.data.length > 0) {
                     $('#supportMessages').empty();
                     response.data.forEach(function(msg) {
                         addSupportMessage(msg.noiDung, msg.hinhAnh, 'customer', msg.thoiGianGui, msg.noiDungTraNoi);
                     });
                 }
            });
        }

        // Toggle support
        $('#supportToggle').click(function() {
            const container = $('#supportContainer');
            if (container.is(':visible')) {
                container.fadeOut(300);
            } else {
                container.fadeIn(300, function() {
                    $('#supportMessageInput').focus();
                    loadSupportMessages();
                    setTimeout(supportScrollToBottom, 200);
                });
            }
        });

        // Close support
        $('#supportClose').click(function() {
            $('#supportContainer').fadeOut(300);
        });

        // Refresh messages
        $('#supportRefresh').click(function() {
            loadSupportMessages();
        });

        // Image attachment
        $('#supportImageBtn').click(function() {
            $('#supportImageInput').click();
        });

        $('#supportImageInput').change(function() {
            const file = this.files[0];
            if (file) {
                selectedImage = file;
                const reader = new FileReader();
                reader.onload = function(e) {
                    $('#supportPreviewImg').attr('src', e.target.result);
                    $('#supportImagePreview').show();
                };
                reader.readAsDataURL(file);
            }
        });

        // Send message
        $('#supportSendBtn').click(sendSupportMessage);
        
        $('#supportMessageInput').keypress(function(e) {
            if (e.which === 13 && !e.shiftKey) {
                e.preventDefault();
                sendSupportMessage();
            }
        });

        function sendSupportMessage() {
            const input = $('#supportMessageInput');
            const message = input.val().trim();
            
            if (!message && !selectedImage || isTyping) return;

            // Show typing indicator
            showSupportTyping();
            
            // Prepare form data
            const formData = new FormData();
            formData.append('noiDung', message);
            if (selectedImage) {
                formData.append('hinhAnh', selectedImage);
            }
            
            // Send to server
            $.ajax({
                url: '@Url.Action("SendMessage", "Support")',
                method: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    hideSupportTyping();
                    
                    if (response.success) {
                        // Add message to chat
                        addSupportMessage(response.data.noiDung, response.data.hinhAnh, 'customer', response.data.thoiGianGui);
                        
                        // Clear input
                        input.val('');
                        removeSupportImagePreview();
                        
                        showSupportAlert('Tin nhắn đã được gửi thành công', 'success');
                    } else {
                        showSupportAlert(response.message || 'Có lỗi xảy ra, vui lòng thử lại.', 'error');
                    }
                },
                error: function() {
                    hideSupportTyping();
                    showSupportAlert('Không thể kết nối đến server. Vui lòng thử lại sau.', 'error');
                }
            });
        }

        function addSupportMessage(content, image, type, timestamp, reply = null) {
            const time = timestamp || new Date().toLocaleTimeString('vi-VN', { 
                hour: '2-digit', 
                minute: '2-digit' 
            });
            
            const avatar = type === 'customer' ? 
                '<i class="fas fa-user"></i>' : 
                '<i class="fas fa-user-tie"></i>';
            
            const messageClass = type === 'customer' ? 'customer-message' : 'staff-message';
            
            let messageContent = '';
            if (content) {
                messageContent += `<p class="mb-0">${formatSupportMessage(content)}</p>`;
            }
            if (image) {
                messageContent += `<img src="${image}" alt="Hình ảnh đính kèm" class="img-fluid" onclick="showSupportImageModal('${image}')" style="cursor: pointer;" />`;
            }
            
            const messageHtml = `
                <div class="message ${messageClass}">
                    <div class="message-avatar">${avatar}</div>
                    <div class="message-content">
                        ${messageContent}
                    </div>
                    <div class="message-time">${time}</div>
                </div>
            `;
            
            $('#supportMessages').append(messageHtml);
            
            // Add staff reply if exists
            if (reply) {
                const replyHtml = `
                    <div class="message staff-message">
                        <div class="message-avatar"><i class="fas fa-user-tie"></i></div>
                        <div class="message-content">
                            <p class="mb-0">${formatSupportMessage(reply)}</p>
                        </div>
                        <div class="message-time">Phản hồi từ quản lý</div>
                    </div>
                `;
                $('#supportMessages').append(replyHtml);
            }
            
            setTimeout(function() {
                supportScrollToBottom();
            }, 100);
        }

        function formatSupportMessage(content) {
            content = content.replace(/\n/g, '<br>');
            const urlRegex = /(https?:\/\/[^\s]+)/g;
            content = content.replace(urlRegex, '<a href="$1" target="_blank">$1</a>');
            return content;
        }

        function showSupportTyping() {
            isTyping = true;
            $('#supportTyping').show();
            setTimeout(function() {
                supportScrollToBottom();
            }, 100);
        }

        function hideSupportTyping() {
            isTyping = false;
            $('#supportTyping').hide();
        }

        function supportScrollToBottom() {
            const messagesContainer = $('#supportMessages');
            if (messagesContainer.length > 0) {
                const container = messagesContainer[0];
                container.scrollTop = container.scrollHeight;
                
                messagesContainer.animate({
                    scrollTop: container.scrollHeight
                }, 300);
            }
        }

        function showSupportAlert(message, type) {
            const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
            
            const alertHtml = `
                <div class="alert ${alertClass} alert-dismissible fade show position-fixed" style="top: 20px; left: 50%; transform: translateX(-50%); z-index: 9999; min-width: 300px;" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `;
            
            $('body').append(alertHtml);
            
            setTimeout(function() {
                $('.alert').fadeOut();
            }, 3000);
        }

        // Auto-scroll to bottom on page load
        setTimeout(supportScrollToBottom, 100);
    });

    function removeSupportImagePreview() {
        $('#supportImagePreview').hide();
        $('#supportImageInput').val('');
        selectedImage = null;
    }

    function showSupportImageModal(imageSrc) {
        // Create and show image modal (reuse existing modal if available)
        if (!$('#supportImageModal').length) {
            const modalHtml = `
                <div class="modal fade" id="supportImageModal" tabindex="-1">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Hình ảnh</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body text-center">
                                <img id="supportModalImage" src="" alt="Hình ảnh" class="img-fluid" />
                            </div>
                        </div>
                    </div>
                </div>
            `;
            $('body').append(modalHtml);
        }
        
        $('#supportModalImage').attr('src', imageSrc);
        $('#supportImageModal').modal('show');
    }
</script>
} 