@{
    // Ví dụ sử dụng hệ thống đánh giá sao
}

<div class="rating-form">
    <h5>Đánh giá sản phẩm</h5>
    
    <div class="form-group">
        <label>Điểm đánh giá:</label>
        @await Html.PartialAsync("_RatingSystem", null)
    </div>
    
    <div class="form-group">
        <label for="noiDungDanhGia">Nội dung đánh giá:</label>
        <textarea id="noiDungDanhGia" name="NoiDungDanhGia" class="form-control" 
                  placeholder="Viết đánh giá của bạn về sản phẩm..."></textarea>
    </div>
    
    <button type="submit" class="btn btn-primary">
        <i class="fas fa-paper-plane me-2"></i>Gửi đánh giá
    </button>
</div>

<!-- Ví dụ hiển thị đánh giá -->
<div class="mt-4">
    <h6>Đánh giá trung bình:</h6>
    @await Html.PartialAsync("_RatingDisplay", 8.5)
</div> 