@model CinemaManagement.ViewModels.AdminSupportViewModel
@{
    ViewData["Title"] = "Quản lý hỗ trợ khách hàng";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-headset me-2"></i>
                            Quản lý hỗ trợ khách hàng
                        </h4>
                        <button class="btn btn-light btn-sm" onclick="loadStatistics()">
                            <i class="fas fa-chart-bar me-1"></i>
                            Thống kê
                        </button>
                    </div>
                </div>
                
                <!-- Filters and Search -->
                <div class="card-body border-bottom">
                    <form method="get" class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Tìm kiếm</label>
                            <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Tên khách hàng, nội dung tin nhắn...">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Trạng thái</label>
                            <select name="trangThai" class="form-select">
                                <option value="">Tất cả</option>
                                <option value="Chưa trả lời" selected="@(Model.TrangThai == "Chưa trả lời")">Chưa trả lời</option>
                                <option value="Đã trả lời" selected="@(Model.TrangThai == "Đã trả lời")">Đã trả lời</option>
                                <option value="Đã xử lý" selected="@(Model.TrangThai == "Đã xử lý")">Đã xử lý</option>
                                <option value="Đã đọc" selected="@(Model.TrangThai == "Đã đọc")">Đã đọc</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search me-1"></i>
                                    Tìm kiếm
                                </button>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">&nbsp;</label>
                            <div class="text-end">
                                <small class="text-muted">
                                    Tổng: @Model.TotalCount tin nhắn
                                </small>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Messages List -->
                <div class="card-body p-0">
                    @if (Model.Messages.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Khách hàng</th>
                                        <th>Tin nhắn</th>
                                        <th>Thời gian</th>
                                        <th>Trạng thái</th>
                                        <th>Phản hồi</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var message in Model.Messages)
                                    {
                                        <tr data-message-id="@message.MaTinNhan">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="flex-shrink-0">
                                                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                                            <i class="fas fa-user"></i>
                                                        </div>
                                                    </div>
                                                    <div class="flex-grow-1 ms-3">
                                                        <div class="fw-bold">@message.KhachHang?.HoTen</div>
                                                        <small class="text-muted">@message.KhachHang?.SDT</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="message-preview">
                                                    @if (!string.IsNullOrEmpty(message.NoiDung))
                                                    {
                                                        <p class="mb-1">@(message.NoiDung.Length > 100 ? message.NoiDung.Substring(0, 100) + "..." : message.NoiDung)</p>
                                                    }
                                                    @if (!string.IsNullOrEmpty(message.HinhAnh))
                                                    {
                                                        <small class="text-muted">
                                                            <i class="fas fa-image me-1"></i>Có hình ảnh đính kèm
                                                        </small>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @message.ThoiGianGui.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </td>
                                            <td>
                                                @if (string.IsNullOrEmpty(message.NoiDungTraNoi))
                                                {
                                                    <span class="badge bg-warning">Chưa trả lời</span>
                                                }
                                                else if (message.TrangThai == "Đã trả lời")
                                                {
                                                    <span class="badge bg-success">Đã trả lời</span>
                                                }
                                                else if (message.TrangThai == "Đã xử lý")
                                                {
                                                    <span class="badge bg-info">Đã xử lý</span>
                                                }
                                                else if (message.TrangThai == "Đã đọc")
                                                {
                                                    <span class="badge bg-secondary">Đã đọc</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(message.NoiDungTraNoi))
                                                {
                                                    <div class="text-truncate" style="max-width: 200px;" title="@message.NoiDungTraNoi">
                                                        @message.NoiDungTraNoi
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa có phản hồi</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-outline-primary" onclick="openChatModal('@message.MaKhachHang')" title="Xem chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    @if (string.IsNullOrEmpty(message.NoiDungTraNoi))
                                                    {
                                                        <button class="btn btn-outline-success" onclick="quickReply('@message.MaTinNhan')" title="Trả lời nhanh">
                                                            <i class="fas fa-reply"></i>
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-outline-info" onclick="markAsProcessed('@message.MaTinNhan')" title="Đánh dấu đã xử lý">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                    }
                                                    <button class="btn btn-outline-secondary" onclick="markAsRead('@message.MaTinNhan')" title="Đánh dấu đã đọc">
                                                        <i class="fas fa-check-double"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (Model.TotalPages > 1)
                        {
                            <div class="card-footer">
                                <nav aria-label="Page navigation">
                                    <ul class="pagination justify-content-center mb-0">
                                        @if (Model.CurrentPage > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="?page=@(Model.CurrentPage - 1)&searchTerm=@Model.SearchTerm&trangThai=@Model.TrangThai">Trước</a>
                                            </li>
                                        }

                                        @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                        {
                                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                                <a class="page-link" href="?page=@i&searchTerm=@Model.SearchTerm&trangThai=@Model.TrangThai">@i</a>
                                            </li>
                                        }

                                        @if (Model.CurrentPage < Model.TotalPages)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="?page=@(Model.CurrentPage + 1)&searchTerm=@Model.SearchTerm&trangThai=@Model.TrangThai">Sau</a>
                                            </li>
                                        }
                                    </ul>
                                </nav>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Không có tin nhắn hỗ trợ nào.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Chat Detail Modal -->
<div class="modal fade" id="chatModal" tabindex="-1" aria-labelledby="chatModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="chatModalLabel">
                    <i class="fas fa-comments me-2"></i>
                    Chi tiết hỗ trợ - <span id="customerName"></span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <div class="row g-0" style="height: 600px;">
                    <!-- Customer Info -->
                    <div class="col-md-3 border-end">
                        <div class="p-3 border-bottom bg-light">
                            <h6 class="mb-0">Thông tin khách hàng</h6>
                        </div>
                        <div class="p-3" id="customerInfo">
                            <!-- Customer info will be loaded here -->
                        </div>
                    </div>
                    
                    <!-- Chat Messages -->
                    <div class="col-md-9 d-flex flex-column">
                        <div class="flex-grow-1 p-3" id="chatMessages" style="max-height: 450px; overflow-y: auto;">
                            <!-- Messages will be loaded here -->
                        </div>
                        
                        <!-- Reply Input -->
                        <div class="border-top p-3 bg-light">
                            <form id="replyForm">
                                <div class="mb-2">
                                    <textarea id="replyContent" class="form-control" rows="3" placeholder="Nhập phản hồi cho khách hàng..." required></textarea>
                                </div>
                                <div class="d-flex gap-2 justify-content-between">
                                    <div class="d-flex gap-2">
                                        <button type="submit" class="btn btn-success">
                                            <i class="fas fa-paper-plane me-1"></i>
                                            Gửi phản hồi
                                        </button>
                                        <button type="button" class="btn btn-secondary" onclick="markCustomerAsProcessed()">
                                            <i class="fas fa-check me-1"></i>
                                            Đã xử lý
                                        </button>
                                    </div>
                                    <button type="button" class="btn btn-outline-secondary" onclick="markCustomerAsRead()">
                                        <i class="fas fa-check-double me-1"></i>
                                        Đã đọc
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Reply Modal -->
<div class="modal fade" id="quickReplyModal" tabindex="-1" aria-labelledby="quickReplyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="quickReplyModalLabel">
                    <i class="fas fa-reply me-2"></i>
                    Trả lời nhanh
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="quickReplyForm">
                    <input type="hidden" id="quickReplyMessageId">
                    <div class="mb-3">
                        <label for="quickReplyContent" class="form-label">Nội dung phản hồi</label>
                        <textarea id="quickReplyContent" class="form-control" rows="5" placeholder="Nhập nội dung phản hồi cho khách hàng..." required></textarea>
                        <div class="form-text">Phản hồi này sẽ được hiển thị cho khách hàng trong support chat.</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>
                    Hủy
                </button>
                <button type="button" class="btn btn-success" onclick="sendQuickReply()">
                    <i class="fas fa-paper-plane me-1"></i>
                    Gửi phản hồi
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Modal -->
<div class="modal fade" id="statisticsModal" tabindex="-1" aria-labelledby="statisticsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title" id="statisticsModalLabel">
                    <i class="fas fa-chart-bar me-2"></i>
                    Thống kê hỗ trợ khách hàng
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="statisticsContent">
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Đang tải...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentCustomerId = null;
        
        function openChatModal(customerId) {
            currentCustomerId = customerId;
            $('#chatModal').modal('show');
            loadChatDetail(customerId);
        }
        
        function loadChatDetail(customerId) {
            $.get('@Url.Action("ChatDetail", "AdminSupport")', { maKhachHang: customerId }, function(response) {
                if (response.success) {
                    $('#customerName').text(response.khachHang.hoTen);
                    
                    // Load customer info
                    $('#customerInfo').html(`
                        <div class="text-center mb-3">
                            <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                <i class="fas fa-user fa-2x"></i>
                            </div>
                        </div>
                        <div class="text-center">
                            <h6 class="mb-1">${response.khachHang.hoTen}</h6>
                            <small class="text-muted">${response.khachHang.sdt}</small>
                        </div>
                    `);
                    
                    // Load messages
                    let messagesHtml = '';
                    response.messages.forEach(function(msg) {
                        // Customer message
                        const statusBadge = msg.noiDungTraNoi ? 
                            '<span class="badge bg-success ms-2">Đã trả lời</span>' :
                            '<span class="badge bg-warning ms-2">Chưa trả lời</span>';
                            
                        messagesHtml += `
                            <div class="d-flex mb-3">
                                <div class="flex-shrink-0">
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                        <i class="fas fa-user"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <div class="bg-light p-3 rounded">
                                        ${msg.noiDung ? `<p class="mb-0">${msg.noiDung}</p>` : ''}
                                        ${msg.hinhAnh ? `<img src="${msg.hinhAnh}" class="img-fluid rounded mt-2" style="max-width: 200px; cursor: pointer;" onclick="showSupportImageModal('${msg.hinhAnh}')" />` : ''}
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <small class="text-muted">${msg.thoiGianGui}</small>
                                        ${statusBadge}
                                    </div>
                                </div>
                            </div>
                        `;
                        
                        // Staff reply if exists
                        if (msg.noiDungTraNoi) {
                            messagesHtml += `
                                <div class="d-flex mb-3 justify-content-end">
                                    <div class="flex-grow-1 me-3 text-end">
                                        <div class="bg-success text-white p-3 rounded d-inline-block">
                                            <p class="mb-0">${msg.noiDungTraNoi}</p>
                                        </div>
                                        <div>
                                            <small class="text-muted">Phản hồi từ quản lý</small>
                                        </div>
                                    </div>
                                    <div class="flex-shrink-0">
                                        <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 35px; height: 35px;">
                                            <i class="fas fa-user-tie"></i>
                                        </div>
                                    </div>
                                </div>
                            `;
                        }
                    });
                    
                    $('#chatMessages').html(messagesHtml);
                    $('#chatMessages').scrollTop($('#chatMessages')[0].scrollHeight);
                }
            });
        }
        
        function quickReply(messageId) {
            $('#quickReplyMessageId').val(messageId);
            $('#quickReplyModal').modal('show');
        }
        
        function sendQuickReply() {
            const messageId = $('#quickReplyMessageId').val();
            const content = $('#quickReplyContent').val().trim();
            
            if (!content) {
                alert('Vui lòng nhập nội dung phản hồi');
                return;
            }
            
            $.post('@Url.Action("SendReply", "AdminSupport")', {
                maTinNhan: messageId,
                noiDungTraNoi: content
            }, function(response) {
                if (response.success) {
                    $('#quickReplyModal').modal('hide');
                    $('#quickReplyContent').val('');
                    location.reload();
                } else {
                    alert(response.message);
                }
            });
        }
        
        function markAsProcessed(messageId) {
            $.post('@Url.Action("MarkAsProcessed", "AdminSupport")', {
                maTinNhan: messageId
            }, function(response) {
                if (response.success) {
                    location.reload();
                } else {
                    alert(response.message);
                }
            });
        }
        
        function markCustomerAsProcessed() {
            // Implement if needed - for now just close modal
            $('#chatModal').modal('hide');
        }
        
        function markCustomerAsRead() {
            // Implement if needed - for now just close modal
            $('#chatModal').modal('hide');
        }
        
        $('#replyForm').on('submit', function(e) {
            e.preventDefault();
            
            const content = $('#replyContent').val().trim();
            if (!content) return;
            
            // Get the latest unanswered message from current customer
            if (currentCustomerId) {
                $.get('@Url.Action("ChatDetail", "AdminSupport")', { maKhachHang: currentCustomerId }, function(response) {
                    if (response.success) {
                        // Find first unanswered message
                        const unansweredMessage = response.messages.find(m => !m.noiDungTraNoi);
                        if (unansweredMessage) {
                            $.post('@Url.Action("SendReply", "AdminSupport")', {
                                maTinNhan: unansweredMessage.maTinNhan,
                                noiDungTraNoi: content
                            }, function(replyResponse) {
                                if (replyResponse.success) {
                                    $('#replyContent').val('');
                                    loadChatDetail(currentCustomerId);
                                } else {
                                    alert(replyResponse.message);
                                }
                            });
                        }
                    }
                });
            }
        });
        
        function markAsRead(messageId) {
            $.post('@Url.Action("MarkAsRead", "AdminSupport")', { maTinNhan: messageId }, function(response) {
                if (response.success) {
                    location.reload();
                }
            });
        }
        
        function loadStatistics() {
            $('#statisticsModal').modal('show');
            
            $.get('@Url.Action("GetStatistics", "AdminSupport")', function(response) {
                if (response.success) {
                    const stats = response.data;
                    $('#statisticsContent').html(`
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="card bg-primary text-white">
                                    <div class="card-body text-center">
                                        <h3>${stats.totalMessages}</h3>
                                        <p class="mb-0">Tổng tin nhắn</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="card bg-info text-white">
                                    <div class="card-body text-center">
                                        <h3>${stats.totalCustomers}</h3>
                                        <p class="mb-0">Khách hàng liên hệ</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="card bg-warning text-white">
                                    <div class="card-body text-center">
                                        <h3>${stats.unansweredMessages}</h3>
                                        <p class="mb-0">Chưa trả lời</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h3>${stats.answeredMessages}</h3>
                                        <p class="mb-0">Đã trả lời</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h5>${stats.todayMessages}</h5>
                                        <small class="text-muted">Hôm nay</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h5>${stats.weekMessages}</h5>
                                        <small class="text-muted">Tuần này</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card">
                                    <div class="card-body text-center">
                                        <h5>${stats.monthMessages}</h5>
                                        <small class="text-muted">Tháng này</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `);
                }
            });
        }
        
        function showSupportImageModal(imageSrc) {
            // Create and show image modal (reuse existing modal if available)
            if (!$('#supportImageModal').length) {
                const modalHtml = `
                    <div class="modal fade" id="supportImageModal" tabindex="-1">
                        <div class="modal-dialog modal-lg modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Hình ảnh từ khách hàng</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body text-center">
                                    <img id="supportModalImage" src="" alt="Hình ảnh" class="img-fluid" />
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                $('body').append(modalHtml);
            }
            
            $('#supportModalImage').attr('src', imageSrc);
            $('#supportImageModal').modal('show');
        }
    </script>
} 