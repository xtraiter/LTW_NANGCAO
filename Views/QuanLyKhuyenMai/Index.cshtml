@model CinemaManagement.ViewModels.QuanLyKhuyenMaiViewModel
@{
    ViewData["Title"] = "Quản lý khuyến mãi";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-tags"></i> Quản lý khuyến mãi
                    </h3>
                    <a href="@Url.Action("Create")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm khuyến mãi
                    </a>
                </div>

                <div class="card-body">
                    <!-- Bộ lọc và tìm kiếm -->
                    <form method="get" class="mb-4">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="fas fa-search"></i>
                                    </span>
                                    <input type="text" name="searchTerm" value="@Model.SearchTerm" 
                                           class="form-control" placeholder="Tìm kiếm theo tên, mã, mô tả...">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <select name="status" class="form-select">
                                    <option value="" selected="@(string.IsNullOrEmpty(Model.Status))">Tất cả trạng thái</option>
                                    <option value="active" selected="@(Model.Status == "active")">Đang hoạt động</option>
                                    <option value="upcoming" selected="@(Model.Status == "upcoming")">Sắp diễn ra</option>
                                    <option value="expired" selected="@(Model.Status == "expired")">Đã hết hạn</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select name="sortBy" class="form-select">
                                    <option value="tenGiamGia" selected="@(Model.SortBy == "tenGiamGia")">Sắp xếp theo tên</option>
                                    <option value="phantramgiam" selected="@(Model.SortBy == "phantramgiam")">Sắp xếp theo % giảm</option>
                                    <option value="thoigianbatdau" selected="@(Model.SortBy == "thoigianbatdau")">Sắp xếp theo ngày bắt đầu</option>
                                    <option value="thoigianketthuc" selected="@(Model.SortBy == "thoigianketthuc")">Sắp xếp theo ngày kết thúc</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <select name="pageSize" class="form-select">
                                    <option value="10" selected="@(Model.PageSize == 10)">10/trang</option>
                                    <option value="25" selected="@(Model.PageSize == 25)">25/trang</option>
                                    <option value="50" selected="@(Model.PageSize == 50)">50/trang</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-outline-primary me-2">
                                    <i class="fas fa-filter"></i> Lọc
                                </button>
                                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                    <i class="fas fa-times"></i> Xóa bộ lọc
                                </a>
                            </div>
                        </div>
                    </form>

                    <!-- Thông báo -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Thống kê -->
                    <div class="row mb-3">
                        <div class="col-md-3">
                            <div class="info-box">
                                <span class="info-box-icon bg-info">
                                    <i class="fas fa-tags"></i>
                                </span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Tổng khuyến mãi</span>
                                    <span class="info-box-number">@Model.TotalItems</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="info-box">
                                <span class="info-box-icon bg-success">
                                    <i class="fas fa-play"></i>
                                </span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Đang hoạt động</span>
                                    <span class="info-box-number">
                                        @{
                                            var currentDate = DateTime.Now;
                                            var activeCount = Model.Vouchers.Count(v => v.ThoiGianBatDau <= currentDate && v.ThoiGianKetThuc >= currentDate);
                                        }
                                        @activeCount
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="info-box">
                                <span class="info-box-icon bg-warning">
                                    <i class="fas fa-clock"></i>
                                </span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Sắp diễn ra</span>
                                    <span class="info-box-number">
                                        @{
                                            var upcomingCount = Model.Vouchers.Count(v => v.ThoiGianBatDau > currentDate);
                                        }
                                        @upcomingCount
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="info-box">
                                <span class="info-box-icon bg-danger">
                                    <i class="fas fa-times"></i>
                                </span>
                                <div class="info-box-content">
                                    <span class="info-box-text">Đã hết hạn</span>
                                    <span class="info-box-number">
                                        @{
                                            var expiredCount = Model.Vouchers.Count(v => v.ThoiGianKetThuc < currentDate);
                                        }
                                        @expiredCount
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Bảng dữ liệu -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Mã KM</th>
                                    <th>Tên khuyến mãi</th>
                                    <th>% Giảm</th>
                                    <th>Thời gian</th>
                                    <th>Trạng thái</th>
                                    <th>Người tạo</th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Vouchers.Any())
                                {
                                    @foreach (var voucher in Model.Vouchers)
                                    {
                                        var status = "";
                                        var statusClass = "";
                                        var statusIcon = "";
                                        
                                        if (voucher.ThoiGianKetThuc < currentDate)
                                        {
                                            status = "Hết hạn";
                                            statusClass = "bg-danger";
                                            statusIcon = "fas fa-times";
                                        }
                                        else if (voucher.ThoiGianBatDau > currentDate)
                                        {
                                            status = "Sắp diễn ra";
                                            statusClass = "bg-warning";
                                            statusIcon = "fas fa-clock";
                                        }
                                        else
                                        {
                                            status = "Đang hoạt động";
                                            statusClass = "bg-success";
                                            statusIcon = "fas fa-play";
                                        }
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">@voucher.MaGiamGia</span>
                                            </td>
                                            <td>
                                                <strong>@voucher.TenGiamGia</strong>
                                                @if (!string.IsNullOrEmpty(voucher.MoTa))
                                                {
                                                    <br><small class="text-muted">@voucher.MoTa</small>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-info fs-6">
                                                    <i class="fas fa-percentage"></i> @voucher.PhanTramGiam%
                                                </span>
                                            </td>
                                            <td>
                                                <small>
                                                    <i class="fas fa-play text-success"></i> @voucher.ThoiGianBatDau.ToString("dd/MM/yyyy HH:mm")
                                                    <br>
                                                    <i class="fas fa-stop text-danger"></i> @voucher.ThoiGianKetThuc.ToString("dd/MM/yyyy HH:mm")
                                                </small>
                                            </td>
                                            <td>
                                                <span class="badge @statusClass">
                                                    <i class="@statusIcon"></i> @status
                                                </span>
                                            </td>
                                            <td>
                                                @if (voucher.NhanVien != null)
                                                {
                                                    <small>@voucher.NhanVien.TenNhanVien</small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">N/A</small>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", new { id = voucher.MaGiamGia })" 
                                                       class="btn btn-sm btn-outline-info" title="Chi tiết">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = voucher.MaGiamGia })" 
                                                       class="btn btn-sm btn-outline-warning" title="Sửa">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-secondary" 
                                                            onclick="toggleStatus('@voucher.MaGiamGia', '@voucher.TenGiamGia')" 
                                                            title="Thay đổi trạng thái">
                                                        <i class="fas fa-toggle-on"></i>
                                                    </button>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" 
                                                            onclick="deleteVoucher('@voucher.MaGiamGia', '@voucher.TenGiamGia')" 
                                                            title="Xóa">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-4">
                                            <div class="text-muted">
                                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                                <p>Không tìm thấy khuyến mãi nào</p>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Phân trang -->
                    @if (Model.TotalPages > 1)
                    {
                        <nav aria-label="Phân trang">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { 
                                        searchTerm = Model.SearchTerm, 
                                        status = Model.Status,
                                        sortBy = Model.SortBy, 
                                        pageSize = Model.PageSize, 
                                        page = Model.CurrentPage - 1 })">
                                        <i class="fas fa-chevron-left"></i> Trước
                                    </a>
                                </li>

                                @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { 
                                            searchTerm = Model.SearchTerm, 
                                            status = Model.Status,
                                            sortBy = Model.SortBy, 
                                            pageSize = Model.PageSize, 
                                            page = i })">@i</a>
                                    </li>
                                }

                                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { 
                                        searchTerm = Model.SearchTerm, 
                                        status = Model.Status,
                                        sortBy = Model.SortBy, 
                                        pageSize = Model.PageSize, 
                                        page = Model.CurrentPage + 1 })">
                                        Sau <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>

                        <div class="text-center text-muted">
                            Hiển thị @((Model.CurrentPage - 1) * Model.PageSize + 1) - @(Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalItems)) 
                            trong tổng số @Model.TotalItems khuyến mãi
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function deleteVoucher(maGiamGia, tenGiamGia) {
    if (confirm(`Bạn có chắc chắn muốn xóa khuyến mãi "${tenGiamGia}"?`)) {
        $.ajax({
            url: '@Url.Action("Delete")',
            type: 'POST',
            data: { id: maGiamGia },
            success: function(response) {
                if (response.success) {
                    alert(response.message);
                    location.reload();
                } else {
                    alert(response.message);
                }
            },
            error: function() {
                alert('Có lỗi xảy ra khi xóa khuyến mãi!');
            }
        });
    }
}

function toggleStatus(maGiamGia, tenGiamGia) {
    if (confirm(`Bạn có chắc chắn muốn thay đổi trạng thái khuyến mãi "${tenGiamGia}"?`)) {
        $.ajax({
            url: '@Url.Action("ToggleStatus")',
            type: 'POST',
            data: { id: maGiamGia },
            success: function(response) {
                if (response.success) {
                    alert(response.message);
                    location.reload();
                } else {
                    alert(response.message);
                }
            },
            error: function() {
                alert('Có lỗi xảy ra khi thay đổi trạng thái!');
            }
        });
    }
}
</script>
